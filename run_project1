node {
	def project_folder = 'project1'
	deployCode = input id: 'deployCode', message: 'Deploy Code?', ok: 'Submit', parameters: [[$class: 'ChoiceParameterDefinition', choices: 'Yes\nNo', description: '', name: 'Deploy Code']]
                   if (deployCode == "Yes") {
                   }

	stage 'Getting git repo'
	def workspace = pwd()
	git branch:'master', credentialsId: '1', url: 'https://github.com/pallavsharma67/jmeter-test'
	echo "Current Directory : ${workspace}"
	sh "ls"

	stage 'reading directory'
	def files = findFiles(glob: "${project_folder}/*.jmx")

	for(i in files){
		stage "Running Task: ${i}"
		sh "jmeter -n -t ${i} -l test.jtl"
	}
}