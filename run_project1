node {
	stage 'Getting git repo'
	def workspace = pwd()
	git branch:'master', credentialsId: '1', url: 'https://github.com/pallavsharma67/jmeter-test'
	echo "Current Directory : ${workspace}"
	sh "ls"

	stage 'Select Project DIR'
	def currentDirFiles = findFiles(glob: "*")
	String dirList = "--select--"
	for(i in currentDirFiles){
		if(i.isDirectory()){
			dirList += "/${i}"
		}
	}
	def project_folder = input message: 'Select Project', ok: 'Select',parameters: [choice(name: 'PROJECT_FOLDER', choices: dirList, description: 'What is the release scope?')]
	echo "${project_folder}"
}